{
    "title": "Question schema for IAMA tasks",
    "type": "object",
    "properties": {
      "task": {
          "description": "The question asked in the task",
          "type": "string"
      },
      "id": {
          "description": "A unique identifier for the task",
          "type": "string"
      },
      "labels": {
        "description": "Labels to specify the task",
        "type": "array", 
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "type":{
        "description": "Question type",
        "type": "string",
        "enum": [                   
          "open question",
          "closed question"
        ]                     
      }, 
      "required_roles":{
        "description": "Roles required to perform task", 
        "type": "array", 
        "items": {
          "type": "string"
        }
      }, 
      "lifecycle":{
        "description": "Part of the algorithm lifecycle to which this task refers",
        "type": "string",
        "enum": [
          "probleemanalyse", 
          "ontwerp", 
          "dataverkenning en -preparatie",
          "ontwikkelen", 
          "validatie", 
          "implementatie", 
          "monitoren", 
          "archiveren"
        ]
      },
      "links": {
        "description": "Links to other relevant measures / tasks",
        "type": "array",
        "items": {}
      },
      "requirements": {
        "description": "Specific requirements for this task", 
        "type": "array", 
        "items": {}
      }
  }
}
